<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :bond_number %><br>
    <%= f.number_field :bond_number %>
  </div>
  <div class="field">
    <%= f.label :bond_type %><br>
    <%= f.select(:bond_type, options_for_select([['Professor', 1], ['Técnico de laboratório', 2],['Estagiário', 3]])) %>
  </div>
  <div class="field">
    <%= f.check_box :technical_user %>
    <%= f.label :technical_user %><br>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn waves-effect waves-light'%>
  </div>
<% end %>
