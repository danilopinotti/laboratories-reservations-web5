
<p id="notice"><%= notice %></p>
<h1>Listing Periods</h1>

<table>
  <thead>
    <tr>
            <th>Begin at</th>
            <th>End at</th>
            <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
    <tr>
            <td><%= period.begin_at %></td>
            <td><%= period.end_at %></td>
            <td><%= link_to 'Show', period, {:class => "waves-effect waves-light btn light-green lighten-1"} %></td>
      <td><%= link_to 'Edit', edit_period_path(period), {:class => "waves-effect waves-light btn blue accent-3"} %></td>
      <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' }, :class => "waves-effect waves-light btn red darken-1" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Period', new_period_path, {:class => "waves-effect waves-light btn blue darken-1"} %>
